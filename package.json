{
  "name": "pink-paprikaa-site",
  "version": "1.0.0",
  "description": "Main Website for Pink Paprikaa",
  "scripts": {
    "dev": "npm-run-all --parallel tw:watch serve",
    "serve": "live-server ./src --no-browser --wait=200 --port=5001 --entry-file=index.html",
    "tw:watch": "tailwindcss -i ./src/assets/styles/input.css -o ./src/assets/styles/output.css --watch",
    "clean": "shx rm -rf dist",
    "copy": "shx cp -r src dist",
    "build:css": "tailwindcss -i ./src/assets/styles/input.css -o ./dist/assets/styles/output.css --minify",
    "build": "npm-run-all clean copy build:css",
    "preview": "serve dist -l 5000"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "serve": "^14.2.5",
    "shx": "^0.4.0",
    "tailwindcss": "^4.1.14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rishavpandey43/pink-paprikaa-site.git"
  },
  "author": "Rishav Pandey",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rishavpandey43/pink-paprikaa-site/issues"
  },
  "homepage": "https://github.com/rishavpandey43/pink-paprikaa-site#readme",
  "dependencies": {
    "@tailwindcss/cli": "^4.1.14"
  }
}
